# MAPPING FILE
# This files define the mapping between the dotfile directory and the filesystem paths
# The mappings are in the form:
# PATH_FROM_THE_DOTFILE_DIRECTORY PATH_FROM_THE_HOME_DIRECTORY

# Bash
bash/bashrc       .bashrc
bash/bash_aliases .bash_aliases
bash/completions  .bash_completions

# ZSH
zsh/completions  .zsh/completions
zsh/init  .zsh/init
zsh/zshrc .zshrc

# VIM
vim/init.vim .config/nvim/init.vim
vim/spell    .config/nvim/spell

# TMUX
tmux/tmux.conf  .tmux.conf
tmux/tmuxinator .tmuxinator

# Git
git/gitattributes .gitattributes
git/gitconfig .gitconfig
git/gitignore .gitignore

# Transmission
transmission.json .config/transmission/settings.json

# Ack
ackrc .ackrc

# VLC
vlc .config/vlc

# Firefox
# This is the custom dictionary
firefox/persdict.dat snap/firefox/common/.mozilla/firefox/olvgmmsd.default/persdict.dat

# VS Code
vscode/settings.json .config/Code/User/settings.json
